<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.NotInstagram" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/grayDarker</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="buttonStyle">@style/NoShadowButton</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="NoShadowButton" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Theme.NotInstagram.NoActionBar" parent="Theme.NotInstagram">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle"> true</item>
    </style>

    <style name="Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

</resources>